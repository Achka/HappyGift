@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<HappyGiftUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>
<div class="login-container">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login-form">
                <hr />

                <div asp-validation-summary="All" class="input-container">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>


                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>


                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-button">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-action="ForgotPassword" class="login-additionals">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-action="Register" class="login-additionals" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                        </p>
                    </div>
                </div>
            </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
