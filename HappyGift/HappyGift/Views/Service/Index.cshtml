@Html.HiddenFor(model => model.Id)

@model HappyGift.Models.ServiceViewModels.CreateServiceViewModel

@{
    ViewData["Title"] = "CreateService";
}

<h2>Service Info</h2>

<hr />
<div class="login-container">
    <form asp-action="CreateService" style="width: 50%; margin: 0 auto;">
        <div asp-validation-summary="ModelOnly" class="input-container"></div>

        <div class="form-group" style="display:none">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>

        <label asp-for="ImageUrl" class="control-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>

        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

        <div class="form-group">
            <label asp-for="Duration" class="control-label"></label>
            <input asp-for="Duration" class="form-control" type="number" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        @if (Model.Id == "0")
    {
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-add-card" style="float:left" asp-area="" asp-controller="Service"
                   asp-action="CreateService" />
        </div>
}
else
{
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-edit-card" style="float:left" asp-area="" asp-controller="Service"
               asp-action="CreateService" />
    </div>
}
</div>
    </form>
</div>

<div style="text-align:center">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
