@using System.Collections.Generic
@{
    ViewData["Title"] = "Home Page";
}
<div class="services">
    @foreach (var service in (List<Service>)@ViewData["Services"])
    {
    <div class="card service">
        <img class="card-img-top" src="@service.ImageUrl"/>
        <div class="card-body">
            <h4 class="card-title">@service.Name</h4>
            <p class="card-text">@service.Description</p>
            <p class="card-text">Price: @service.Price USD</p>
            @if(User.Identity.IsAuthenticated)
            {
                <a asp-controller="Cart" asp-action="AddToCart" asp-route-serviceId="@service.Id" class="btn btn-info">Add To Cart</a>
                @if(User.IsInRole("Admin"))
                {
                    <a class="btn btn-primary" asp-area="" asp-controller="Service"
                       asp-action="Index" asp-route-serviceId="@service.Id" >Edit Service @service.Id</a>
                }
            }
        </div>
    </div>    
    }
</div>
