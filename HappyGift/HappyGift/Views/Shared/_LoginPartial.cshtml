@using Microsoft.AspNetCore.Identity
@using HappyGift.Models

@inject SignInManager<HappyGiftUser> SignInManager
@inject UserManager<HappyGiftUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <a asp-area="" asp-controller="Manage" asp-action="Index" class="w3-bar-item w3-button"
           title="Manage">Profile</a>
        <button type="submit" class="w3-bar-item w3-button">Log out</button>        
    </form>
}
else
{
    <a asp-area="" asp-controller="Account" asp-action="Register" class="w3-bar-item w3-button">Register</a>
    <a asp-area="" asp-controller="Account" asp-action="Login" class="w3-bar-item w3-button">Log in</a>
}
